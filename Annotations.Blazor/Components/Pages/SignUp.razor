@using MatBlazor
@page "/sign-up"


<PageTitle>Register</PageTitle>

<h1>Sign up here</h1>

<p>Please provide the following information, and we will get back to you about your user profile.</p>

<p>
    <MatStringField @bind-Value="@FirstName" placeholder="First Name"></MatStringField>
</p>
<p>
    <MatStringField @bind-Value="@LastName" placeholder="Last Name"></MatStringField>
</p>
<p>
    <MatStringField @bind-Value="@Email" placeholder="E-mail address"></MatStringField>
</p>
<p>
    <MatStringField @bind-Value="@Affiliation" placeholder="Place of work"></MatStringField>
</p>
<p>
    <MatStringField @bind-Value="@JobTitle" placeholder="Job title"></MatStringField>
</p>

<MatButton class="registerButton" OnClick="@Click" Raised="true">Sign up</MatButton>
