@inherits LayoutComponentBase

<div class="header">
    <div>
        <a href="/">
            <img class="logo" src="/img/perfusiontech_logo.png" alt="Perfusiontech home" />
        </a>
    </div>
    <div class="top-row-element">
        <AvatarMenu />
    </div>

</div>


<AuthorizeView>
    <Authorized>
    <!-- Drop down menu code adapted from  https://www.w3schools.com/howto/howto_css_dropdown.asp -->
        <div class="dropdown">
            <button class="dropbtn">Menu</button>
            <div class="dropdown-content">
                <a href="#">Home</a>
                <a href="/images/datasets">Datasets overview</a>
                <a href="/images/annotations">Annotate on images</a>
            </div>
        </div>
    </Authorized>
</AuthorizeView>



<div class="page">
    <div class="main">
        <article class="content px-4">
            @Body
        </article>
    </div>
    
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
